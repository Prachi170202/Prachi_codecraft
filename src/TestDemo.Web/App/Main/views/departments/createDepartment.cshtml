<form id="frm_create_department" name="departmentCreateForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>@L("CreateNewDepartment")</span>
        </h4>
    </div>
    <div class="modal-body">
        <uib-tabset class="tab-container tabbable-line">



            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input id="departmentname" type="text" name="DepartmentName" ng-model="vm.department.departmentname" required maxlength="32" class="validate form-control">
                            <label for="departmentname" class="form-label">@L("DepartmentName")</label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input id="employeecount" type="text" name="EmployeeCount" ng-model="vm.department.employeecount" required maxlength="32" class="validate form-control">
                            <label for="employeecount" class="form-label">@L("EmployeeCount")</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 ">
                    <div class="col-sm-6" ng-repeat="role in vm.roles">
                        <input type="checkbox" name="role" value="{{role.name}}" title="{{role.description}}" class="filled-in" id="role-{{role.id}}" checked="checked" ng-model="role.isAssigned" />
                        <label for="role-{{role.id}}" title="{{role.displayName}}">{{role.name}}</label>
                    </div>
                </div>
            </div>
        </uib-tabset>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Cancel")
        </button>
        <button type="submit" class="btn btn-primary waves-effect" ng-click="vm.save()">
            @L("Save")
        </button>
    </div>

</form>